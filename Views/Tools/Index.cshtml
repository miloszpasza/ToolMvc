@model ToolMvc.Models.ToolTypeViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>List of your tools</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Tools" asp-action="Index" method="get">
    <p>
        Tool type: <select asp-for="ToolType" asp-items="Model.Types">
            <option value="">All</option>
        </select>
        Place adress: <select asp-for="PlaceAdress" asp-items="Model.PlaceAdresses">
            <option value="">All</option>
        </select>
        Search Tool: <input type="text" name="SearchString">
        <input type="submit" value="Search"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tools[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tools[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tools[0].Place)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tools) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ToolID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ToolID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ToolID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
